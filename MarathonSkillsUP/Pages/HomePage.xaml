<Page x:Class="MarathonSkillsUP.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="MARATHON SKILLS 2016" 
                   Style="{StaticResource HeaderTextStyle}" 
                   FontSize="36" Margin="0,0,0,10"/>

        <TextBlock Text="Москва, Россия" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" Margin="0,0,0,5"/>

        <TextBlock Text="среда 21 октября 2016" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" Margin="0,0,0,30"/>

        <Button Content="Я хочу стать бегуном" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="BecomeRunnerButton_Click"/>

        <Button Content="Я хочу стать спонсором бегуна" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="SponsorRunnerButton_Click"/>

        <Button Content="Я хочу узнать больше о событии" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="LearnMoreButton_Click"/>

        <Button Content="Login" 
                Style="{StaticResource BlueButtonStyle}" 
                Width="150" Height="40" Margin="0,20" 
                Click="LoginButton_Click"/>
    </StackPanel>
</Page>
