<Page x:Class="MarathonSkillsUP.Pages.DetailedInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailedInfoPage">

    <StackPanel Margin="50,20">
        <TextBlock Text="Подробная информация" 
                   Style="{StaticResource HeaderTextStyle}" 
                   Margin="0,0,0,20"/>

        <TabControl Height="350">
            <TabItem Header="Marathon Skills 2016">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="Marathon Skills 2016 пройдет в Москве, Россия 24 ноября 2016 года.&#x0a;&#x0a;Это ежегодное мероприятие, в котором могут участвовать профессиональные и любительские бегуны.&#x0a;&#x0a;Событие включает в себя полный марафон, полумарафон и забег на 5 км." 
                               Style="{StaticResource RegularTextStyle}" 
                               Margin="10"/>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Предыдущие результаты">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="Здесь будут отображаться результаты предыдущих марафонов." 
                               Style="{StaticResource RegularTextStyle}" 
                               Margin="10"/>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="BMI/BMR калькулятор">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="Здесь будет калькулятор BMI/BMR." 
                               Style="{StaticResource RegularTextStyle}" 
                               Margin="10"/>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Насколько долго">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock Text="Здесь будет информация о том, сколько времени занимает марафон." 
                               Style="{StaticResource RegularTextStyle}" 
                               Margin="10"/>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Список благотворительных организаций">
                <Grid>
                    <Button Content="Просмотреть благотворительные организации" 
                            Style="{StaticResource GreenButtonStyle}" 
                            Width="350" Height="40" 
                            VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Click="ViewCharitiesButton_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </StackPanel>
</Page>
