<Page x:Class="MarathonSkillsUP.Pages.SponsorshipConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SponsorshipConfirmationPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Подтверждение спонсорства" 
                   Style="{StaticResource HeaderTextStyle}" 
                   Margin="0,0,0,20"/>

        <TextBlock x:Name="ThankYouLabel" Text="Спасибо за вашу спонсорскую поддержку!" 
                   FontFamily="{StaticResource OpenSansFont}" 
                   FontSize="18" 
                   TextAlignment="Center" 
                   Margin="0,0,0,30"/>

        <TextBlock x:Name="RunnerLabel" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" 
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="AmountLabel" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" 
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="SponsorCountLabel" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" 
                   Margin="0,0,0,30"/>

        <Button Content="Вернуться на главный экран" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" 
                Click="ReturnButton_Click"/>
    </StackPanel>
</Page>
