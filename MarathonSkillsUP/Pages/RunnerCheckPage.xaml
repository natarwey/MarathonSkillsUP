<Page x:Class="MarathonSkillsUP.Pages.RunnerCheckPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RunnerCheckPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="MARATHON SKILLS 2016" 
                   Style="{StaticResource HeaderTextStyle}" 
                   Margin="0,0,0,50"/>

        <Button Content="Я участвовал ранее" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="PreviousParticipantButton_Click"/>

        <Button Content="Я новый участник" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="NewParticipantButton_Click"/>
    </StackPanel>
</Page>
