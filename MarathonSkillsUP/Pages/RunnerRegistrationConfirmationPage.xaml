<Page x:Class="MarathonSkillsUP.Pages.RunnerRegistrationConfirmationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Подтверждение регистрации">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="50,20">
        <TextBlock Text="Подтверждение регистрации" 
                   Style="{StaticResource HeaderTextStyle}" 
                   Margin="0,0,0,20"/>

        <TextBlock Text="Спасибо за вашу регистрацию в качестве бегуна!" 
                   FontFamily="{StaticResource OpenSansFont}" 
                   FontSize="18" 
                   TextAlignment="Center" 
                   Margin="0,0,0,30"/>

        <TextBlock x:Name="RegistrationInfoTextBlock" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" 
                   Margin="0,0,0,10"/>

        <TextBlock x:Name="PaymentInfoTextBlock" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" 
                   Margin="0,0,0,10"/>

        <TextBlock Text="Благодарим за участие в Marathon Skills 2016!" 
                   Style="{StaticResource RegularTextStyle}" 
                   TextAlignment="Center" 
                   Margin="0,0,0,30"/>

        <Button Content="Вернуться в меню" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="200" 
                Click="ReturnButton_Click"/>
    </StackPanel>
</Page>
