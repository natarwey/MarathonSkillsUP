<Page x:Class="MarathonSkillsUP.Pages.CoordinatorMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarathonSkillsUP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoordinatorMenuPage">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Меню координатора" 
                   Style="{StaticResource HeaderTextStyle}" 
                   Margin="0,0,0,30"/>

        <Button Content="Бегуны" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="RunnersButton_Click"/>

        <Button Content="Спонсоры" 
                Style="{StaticResource GreenButtonStyle}" 
                Width="300" Height="50" Margin="0,10" 
                Click="SponsorsButton_Click"/>
    </StackPanel>
</Page>
